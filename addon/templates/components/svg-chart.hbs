<svg>
    {{svg-chart-grid
        xTickCount=(if xAxisPlotlines ticksX)
        yTickCount=(if yAxisPlotlines ticksY)
        x=chartDimensions.x
        y=chartDimensions.y
        height=chartDimensions.height
        width=chartDimensions.width
    }}

    {{svg-chart-y-axis
        height=axisY.height
        width=axisY.width
        offsetX=axisY.offsetX
        offsetY=axisY.offsetY
        tickCount=axisY.ticks
    }}
    {{svg-chart-x-axis
        height=axisX.height
        width=axisX.width
        offsetX=axisX.offsetX
        offsetY=axisX.offsetY
        tickCount=axisX.ticks
    }}

    {{#each dataPoints as |dataPoint|}}
        <g class="dataPoint">
            {{#if barChart}}
                {{#each dataPoint as |bar|}}
                    {{svg-chart-rect
                        height=bar.height
                        offsetX=bar.offsetX
                        offsetY=bar.offsetY
                        width=bar.width
                    }}
                {{/each}}
            {{else}}
                {{#each dataPoint as |point|}}
                    <circle cx="{{point.x}}" cy="{{point.y}}" r="2" />
                {{/each}}
            {{/if}}
        </g>
    {{/each}}

    {{#unless barChart}}
        <g class="dataLines">
            {{#each dataLines as |pointString|}}
                <polyline points="{{pointString}}" />
            {{/each}}
        </g>
    {{/unless}}
</svg>
